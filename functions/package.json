{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "serve:debug": "firebase emulators:start --only functions --debug",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:prod": "firebase deploy --only functions -P production",
    "logs": "firebase functions:log",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "npm install && firebase functions:config:get > .runtimeconfig.json",
    "env:setup": "echo \"STRIPE_SECRET_KEY=your_test_key\" > .env.local && echo \"Created .env.local\""
  },
  "engines": {
    "node": "22",
    "npm": ">=10.0.0"
  },
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "stripe": "^18.2.0",
    "winston": "^3.13.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "http-status-codes": "^2.2.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^3.0.3"
  },
  "private": true,
  "eslintConfig": {
    "extends": "google",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true
    }
  }
}
